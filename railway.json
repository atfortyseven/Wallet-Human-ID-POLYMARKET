{
    "$schema": "https://railway.app/railway.schema.json",
    "build": {
        "builder": "NIXPACKS",
        "nixpacksPlan": {
            "phases": {
                "install": {
                    "cmds": [
                        "npm install"
                    ]
                }
            },
            "variables": {
                "NIXPACKS_NODE_VERSION": "20"
            }
        }
    },
    "deploy": {
        "startCommand": "npm start"
    }
}